{
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "description": "__MSG_extDescription__",
  "version": "3.0.0a1",
  "manifest_version": 2,
  "homepage_url": "https://github.com/shyangs/Meihua-Chinese-Converter",

  "applications": {
    "gecko": {
      "id": "MeihuaCC@shyangs",
      "strict_min_version": "52.0"

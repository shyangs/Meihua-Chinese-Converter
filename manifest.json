  },

  "icons": {
    "16": "icon/icon-16.png",
    "24": "icon/icon-24.png",
    "32": "icon/icon-32.png",
    "64": "icon/icon-64.png"
    // "48": "icon/icon-48.png",
    // "128": "icon/icon-128.png"
  },

  // "background": {
  //   "scripts": ["background_scripts/background.js"]

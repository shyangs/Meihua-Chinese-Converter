  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*"],
      "js": [
        "dict/cn2tw_n.js",
        "dict/cn2tw_c.js",
        "dict/cn2tw_p.js",
        "dict/tw2cn_c.js",
        "dict/tw2cn_p.js",
        // "content_scripts/core.js",
        "content_scripts/meihuacc.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "default_locale": "en"
